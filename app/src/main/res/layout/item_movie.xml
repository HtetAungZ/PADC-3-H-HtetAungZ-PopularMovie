<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_kingaurther"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"

            android:paddingEnd="25dp"
            android:src="@drawable/kingarthur" />

        <ImageView
            android:id="@+id/iv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@id/iv_kingaurther"
            android:src="@drawable/ic_favorite_black_24dp" />

        <ImageView
            android:id="@+id/iv_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_kingaurther"
            android:layout_alignEnd="@+id/iv_kingaurther"
            android:layout_marginEnd="26dp"
            android:background="@color/darkcolor"
            android:src="@drawable/ic_crop_free_black_24dp" />


        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_rating"
            android:layout_alignTop="@id/iv_rating"
            android:layout_marginEnd="14dp"

            android:layout_marginTop="12dp"
            android:text="8.5"
            android:textColor="#fff"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_kingaurther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_kingaurther"
            android:layout_toRightOf="@id/iv_kingaurther"
            android:text="King Arthur: Legend of the Sword (2017)"
            android:textColor="@color/darkcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_kingaurther"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_kingaurther"
            android:text="@string/category"
            android:textColor="@color/darkcolor" />


        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_category"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_kingaurther"
            android:text="Current Popularity"
            android:textColor="@color/darkcolor" />

        <RatingBar
            android:id="@+id/rb_popularity"
            style="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/rb_popularity"
            android:layout_below="@id/tv_popularity"
            android:layout_toRightOf="@id/iv_kingaurther"
            android:rating="5" />


        <Button
            android:id="@+id/btn_movieoverview"
            android:layout_width="150dp"
            android:layout_height="40dp"

            android:layout_alignBottom="@+id/iv_kingaurther"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="8dp"
            android:text="Movie Overview"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </RelativeLayout>


</android.support.v7.widget.CardView>